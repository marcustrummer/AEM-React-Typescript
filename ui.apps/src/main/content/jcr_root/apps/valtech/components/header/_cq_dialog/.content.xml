<?xml version="1.0" encoding="UTF-8"?>
<jcr:root
    xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
    xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
    xmlns:cq="http://www.day.com/jcr/cq/1.0"
    xmlns:jcr="http://www.jcp.org/jcr/1.0"
    xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    extraClientLibs="cq.authoring.dialog"
    jcr:primaryType="nt:unstructured"
    jcr:title="Propriedades do Header"
    sling:resourceType="cq/gui/components/authoring/dialog">

    <content jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}false">
                <items jcr:primaryType="nt:unstructured">
                    <tab1
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Logo"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <logo
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/accordion"
                                                composite="{Boolean}true"
                                                name="./logo">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <item
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/well"
                                                        jcr:title="Propriedades do Logo">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <logo
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                                allowUpload="{Boolean}false"
                                                                autoStart="{Boolean}false"
                                                                class="cq-droptarget"
                                                                fieldLabel="Logo do Header"
                                                                fileNameParameter="./fileName"
                                                                fileReferenceParameter="./logo/logoReference"
                                                                mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                                multiple="{Boolean}false"
                                                                name="./file"
                                                                title="Upload Image Asset"
                                                                uploadUrl="${suffix.path}"
                                                                useHTML5="{Boolean}true" />

                                                            <logoDarkTheme
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                                allowUpload="{Boolean}false"
                                                                autoStart="{Boolean}false"
                                                                class="cq-droptarget"
                                                                fieldLabel="Logo do Header alto contraste"
                                                                fileNameParameter="./fileName"
                                                                fileReferenceParameter="./logo/logoReferenceDarkTheme"
                                                                mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                                multiple="{Boolean}false"
                                                                name="./file"
                                                                title="Upload Image Asset"
                                                                uploadUrl="${suffix.path}"
                                                                useHTML5="{Boolean}true" />
                                                            <logoMobile
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                                allowUpload="{Boolean}false"
                                                                autoStart="{Boolean}false"
                                                                class="cq-droptarget"
                                                                fieldLabel="Logo do Header para versao Mobile"
                                                                fileNameParameter="./fileName"
                                                                fileReferenceParameter="./logo/logoReferenceMobile"
                                                                mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                                multiple="{Boolean}false"
                                                                name="./file"
                                                                title="Upload Image Asset"
                                                                uploadUrl="${suffix.path}"
                                                                useHTML5="{Boolean}true" />
                                                            <logoMobileDarkTheme
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="cq/gui/components/authoring/dialog/fileupload"
                                                                allowUpload="{Boolean}false"
                                                                autoStart="{Boolean}false"
                                                                class="cq-droptarget"
                                                                fieldLabel="Logo do Header para versao Mobile alto contraste"
                                                                fileNameParameter="./fileName"
                                                                fileReferenceParameter="./logo/logoReferenceMobileDarkTheme"
                                                                mimeTypes="[image/gif,image/jpeg,image/png,image/tiff,image/svg+xml]"
                                                                multiple="{Boolean}false"
                                                                name="./file"
                                                                title="Upload Image Asset"
                                                                uploadUrl="${suffix.path}"
                                                                useHTML5="{Boolean}true" />
                                                            <logoLink
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                fieldDescription="Make the image a link to another resource."
                                                                fieldLabel="Link de redirecionamento para a home"
                                                                nodeTypes="dam:Asset, nt:file, nt:folder, cq:Page,  sling:Folder, sling:OrderedFolder"
                                                                name="./logo/logoLink"
                                                                required="{Boolean}true"
                                                                rootPath="/content" />
                                                            <logoLinkDataContext
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldLabel="Data Context do logo"
                                                                emptyText="Texto"
                                                                name="./logo/logoLinkDataContext"
                                                                required="{Boolean}true"
                                                                validation="data-context"
                                                            />
                                                        </items>
                                                    </item>
                                                </items>
                                            </logo>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </tab1>


                    <tab2
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Itens da nav (Barra preta)"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <button
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/accordion"
                                                composite="{Boolean}true"
                                                name="./button">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <item
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/well"
                                                        jcr:title="Botão `Acionar Seguro`">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <text
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldLabel="Label do botao"
                                                                emptyText="eg. Acionar Seguro"
                                                                name="./button/text"
                                                                required="{Boolean}false" />
                                                            <linkURL
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                fieldDescription="Make the image a link to another resource."
                                                                fieldLabel="Link do botao"
                                                                nodeTypes="dam:Asset, nt:file, nt:folder, cq:Page,  sling:Folder, sling:OrderedFolder"
                                                                name="./button/linkURL"
                                                                required="{Boolean}false"
                                                                rootPath="/content" />
                                                            <linkURLDataContext
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldLabel="Data Context"
                                                                emptyText="Texto"
                                                                name="./button/linkURLDataContext"
                                                                validation="data-context"
                                                                required="{Boolean}true" />
                                                        </items>
                                                    </item>
                                                </items>
                                            </button>


                                            <linksTopBar
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                fieldLabel="Links da nav(Barra preta)"
                                                composite="{Boolean}true">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    max-item="5" />
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/accordion"
                                                    name="./linksTopBar">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <item
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/well"
                                                            jcr:title="Link da nav">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <text
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldLabel="Label do link"
                                                                    emptyText="Texto"
                                                                    name="./text"
                                                                    required="{Boolean}true" />
                                                                <linkURL
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                    fieldDescription="Make the image a link to another resource."
                                                                    fieldLabel="Link"
                                                                    nodeTypes="dam:Asset, nt:file, nt:folder, cq:Page,  sling:Folder, sling:OrderedFolder"
                                                                    name="./linkURL"
                                                                    required="{Boolean}true"
                                                                    rootPath="/content" />
                                                                <isOpenOnNewWindow
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                    checked="{Boolean}false"
                                                                    uncheckedValue="{Boolean}false"
                                                                    name="./isOpenOnNewWindow"
                                                                    fieldDescription="Marque esse campo caso pagina deva abrir em nova aba."
                                                                    text="Este link deve abrir em nova página?"
                                                                    value="{Boolean}true" />
                                                                <linkURLDataContext
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldLabel="Data Context"
                                                                    emptyText="Texto"
                                                                    name="./linkURLDataContext"
                                                                    validation="data-context"
                                                                    required="{Boolean}true" />
                                                            </items>
                                                        </item>
                                                    </items>
                                                </field>
                                            </linksTopBar>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </tab2>


                    <tab3
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Propriedades do menu (Barra Branca)"
                        sling:resourceType="granite/ui/components/coral/foundation/container"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <columns jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <linksMainBar
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                fieldLabel="Links do Header(Barra Branca)"
                                                composite="{Boolean}true">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    max-item="4" />
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/accordion"
                                                    name="./linksMainBar">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <item
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/well"
                                                            jcr:title="Item do Header">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <text
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldLabel="Título da página"
                                                                    emptyText="eg. Meu Seguro"
                                                                    name="./groupName/text"
                                                                    required="{Boolean}true" />
                                                                <linkURL
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                    fieldDescription="Make the image a link to another resource."
                                                                    fieldLabel="Link da página (opcional)"
                                                                    nodeTypes="dam:Asset, nt:file, nt:folder, cq:Page,  sling:Folder, sling:OrderedFolder"
                                                                    name="./groupName/linkURL"
                                                                    required="{Boolean}false"
                                                                    rootPath="/content" />
                                                                <isOpenOnNewWindow
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                    checked="{Boolean}false"
                                                                    uncheckedValue="{Boolean}false"
                                                                    name="./groupName/isOpenOnNewWindow"
                                                                    fieldDescription="Marque esse campo caso pagina deva abrir em nova aba."
                                                                    text="Este link deve abrir em nova pagina?"
                                                                    value="{Boolean}true" />
                                                                <linkURLDataContext
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldLabel="Data Context"
                                                                    emptyText="Texto"
                                                                    name="./groupName/linkURLDataContext"
                                                                    validation="data-context"
                                                                    required="{Boolean}true" />
                                                                <links
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                                    fieldLabel="Subitem do header"
                                                                    composite="{Boolean}true">
                                                                    <granite:data
                                                                        jcr:primaryType="nt:unstructured"
                                                                        max-item="5" />
                                                                    <field
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/container"
                                                                        name="./links">
                                                                        <items
                                                                            jcr:primaryType="nt:unstructured">
                                                                            <text
                                                                                jcr:primaryType="nt:unstructured"
                                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                                fieldLabel="Título da página"
                                                                                name="./text"
                                                                                required="{Boolean}true" />
                                                                            <link
                                                                                jcr:primaryType="nt:unstructured"
                                                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                                fieldLabel="Link de redirecionamento para a página"
                                                                                nodeTypes="cq:Page"
                                                                                name="./linkURL"
                                                                                rootPath="/content"
                                                                                required="{Boolean}true" />
                                                                            <isOpenOnNewWindow
                                                                                jcr:primaryType="nt:unstructured"
                                                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                                checked="{Boolean}false"
                                                                                uncheckedValue="{Boolean}false"
                                                                                name="./isOpenOnNewWindow"
                                                                                fieldDescription="Marque esse campo caso pagina deva abrir em nova aba."
                                                                                text="Este link deve abrir em nova página?"
                                                                                value="{Boolean}true" />
                                                                            <hasModal
                                                                                granite:class="cq-dialog-checkbox-showhide"
                                                                                jcr:primaryType="nt:unstructured"
                                                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                                checked="{Boolean}false"
                                                                                uncheckedValue="{Boolean}false"
                                                                                name="./hasModal"
                                                                                text="Ação será de modal?"
                                                                                value="{Boolean}true" />
                                                                            <linkURLDataContext
                                                                                jcr:primaryType="nt:unstructured"
                                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                                fieldLabel="Data Context"
                                                                                emptyText="Texto"
                                                                                name="./linkURLDataContext"
                                                                                validation="data-context"
                                                                                required="{Boolean}true"
                                                                            />
                                                                        </items>
                                                                    </field>
                                                                </links>

                                                            </items>
                                                        </item>
                                                    </items>
                                                </field>
                                            </linksMainBar>


                                            <passwordField
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/accordion"
                                                composite="{Boolean}true"
                                                name="./passwordField">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <item
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/well"
                                                        jcr:title="Botão de Mudar senha">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <text
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldLabel="Label do botao"
                                                                emptyText="eg. Alterar senha"
                                                                name="./passwordField/text"
                                                                required="{Boolean}false" />
                                                            <linkURL
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                fieldDescription="Make the image a link to another resource."
                                                                fieldLabel="Link do botao"
                                                                nodeTypes="dam:Asset, nt:file, nt:folder, cq:Page,  sling:Folder, sling:OrderedFolder"
                                                                name="./passwordField/linkURL"
                                                                required="{Boolean}false"
                                                                rootPath="/content" />
                                                            <isOpenOnNewWindow
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                checked="{Boolean}false"
                                                                uncheckedValue="{Boolean}false"
                                                                name="./passwordField/isOpenOnNewWindow"
                                                                fieldDescription="Marque esse campo caso pagina deva abrir em nova aba."
                                                                text="Este link deve abrir em nova página?"
                                                                value="{Boolean}true" />
                                                            <linkURLDataContext
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldLabel="Data Context"
                                                                emptyText="Texto"
                                                                name="./passwordField/linkURLDataContext"
                                                                validation="data-context"
                                                                required="{Boolean}true" />
                                                        </items>
                                                    </item>
                                                </items>
                                            </passwordField>
                                            <logout
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/accordion"
                                                composite="{Boolean}true"
                                                name="./logout">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <item
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/well"
                                                        jcr:title="Botão de logout">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <text
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldLabel="Label do botao"
                                                                emptyText="eg. Sair"
                                                                name="./logout/text"
                                                                required="{Boolean}false" />
                                                            <linkURL
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                                fieldDescription="Make the image a link to another resource."
                                                                fieldLabel="Link do botao"
                                                                nodeTypes="dam:Asset, nt:file, nt:folder, cq:Page,  sling:Folder, sling:OrderedFolder"
                                                                name="./logout/linkURL"
                                                                required="{Boolean}false"
                                                                rootPath="/content" />
                                                            <isOpenOnNewWindow
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                checked="{Boolean}false"
                                                                uncheckedValue="{Boolean}false"
                                                                name="./logout/isOpenOnNewWindow"
                                                                fieldDescription="Marque esse campo caso pagina deva abrir em nova aba."
                                                                text="Este link deve abrir em nova página?"
                                                                value="{Boolean}true" />
                                                            <linkURLDataContext
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                fieldLabel="Data Context"
                                                                emptyText="Texto"
                                                                name="./logout/linkURLDataContext"
                                                                validation="data-context"
                                                                required="{Boolean}true" />
                                                            <timeoutInMilliseconds
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                                                fieldLabel="Timeout in miliseconds"
                                                                defaultValue="1200000"
                                                                min="300000"
                                                                step="60000"
                                                                name="./timeoutInMilliseconds" />
                                                        </items>
                                                    </item>
                                                </items>
                                            </logout>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </tab3>

                </items>
            </tabs>
        </items>
    </content>
</jcr:root>